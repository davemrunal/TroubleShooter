<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="false"
            android:background="@drawable/paper019">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/load"/>

            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/name"
                android:paddingTop="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textname"
                android:text="Yo yo Honeysingh"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="10dp"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name"
                android:layout_toRightOf="@+id/name" />

            <TextView
                android:text="Contact No"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/contact"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/name"/>


            <TextView
                android:id="@+id/textcontact"
                android:text="9090909090"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/contact"
                android:layout_toRightOf="@+id/contact"
                android:layout_alignStart="@+id/textname"/>

            <TextView
                android:text="Locality"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/locality"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact"
                android:layout_alignLeft="@+id/name"/>

            <TextView
                android:id="@+id/textlocality"
                android:text="Navrangpura"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/locality"
                android:layout_toRightOf="@+id/locality"
                android:layout_alignStart="@+id/textname"/>

            <TextView
                android:text="Email-id"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/email"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locality"
                android:layout_alignLeft="@+id/name"/>


            <TextView
                android:id="@+id/textemail"
                android:text="honeysingh@yoyo.com"
                android:textSize="20sp"
                android:textColor="#f00"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/email"
                android:layout_toRightOf="@+id/email"
                android:layout_alignStart="@+id/textname" />




        </RelativeLayout>



</ScrollView>